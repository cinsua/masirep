generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  email         String        @unique
  name          String
  technicianId  String?       @unique
  role          String        @default("tecnico")
  isActive      Boolean       @default(true)
  passwordHash  String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  accounts      Account[]
  sessions      Session[]
  transacciones Transaccion[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Ubicacion {
  id          String       @id @default(cuid())
  codigo      String       @unique
  nombre      String
  descripcion String?
  isActive    Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  armarios    Armario[]
  estanterias Estanteria[]

  @@map("ubicaciones")
}

model Estanteria {
  id            String              @id @default(cuid())
  codigo        String              @unique
  nombre        String
  descripcion   String?
  ubicacionId   String
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  cajones       Cajon[]
  ubicacion     Ubicacion           @relation(fields: [ubicacionId], references: [id], onDelete: Cascade)
  estantes      Estante[]
  organizadores Organizador[]
  repuestos     RepuestoUbicacion[]

  @@map("estanterias")
}

model Armario {
  id            String              @id @default(cuid())
  codigo        String              @unique
  nombre        String
  descripcion   String?
  ubicacionId   String
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  ubicacion     Ubicacion           @relation(fields: [ubicacionId], references: [id], onDelete: Cascade)
  cajones       Cajon[]
  organizadores Organizador[]
  repuestos     RepuestoUbicacion[]

  @@map("armarios")
}

model Cajon {
  id           String              @id @default(cuid())
  codigo       String              @unique
  nombre       String
  descripcion  String?
  estanteriaId String?
  armarioId    String?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  armario      Armario?            @relation(fields: [armarioId], references: [id], onDelete: Cascade)
  estanteria   Estanteria?         @relation(fields: [estanteriaId], references: [id], onDelete: Cascade)
  divisiones   Division[]
  repuestos    RepuestoUbicacion[]

  @@map("cajones")
}

model Estante {
  id           String              @id @default(cuid())
  codigo       String              @unique
  nombre       String
  descripcion  String?
  estanteriaId String
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  estanteria   Estanteria          @relation(fields: [estanteriaId], references: [id], onDelete: Cascade)
  repuestos    RepuestoUbicacion[]

  @@map("estantes")
}

model Division {
  id        String              @id @default(cuid())
  codigo    String              @unique
  nombre    String
  cajonId   String
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  cajon     Cajon               @relation(fields: [cajonId], references: [id], onDelete: Cascade)
  repuestos RepuestoUbicacion[]

  @@map("divisiones")
}

model Organizador {
  id           String      @id @default(cuid())
  codigo       String      @unique
  nombre       String
  descripcion  String?
  estanteriaId String?
  armarioId    String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  cajoncitos   Cajoncito[]
  armario      Armario?    @relation(fields: [armarioId], references: [id], onDelete: Cascade)
  estanteria   Estanteria? @relation(fields: [estanteriaId], references: [id], onDelete: Cascade)

  @@map("organizadores")
}

model Cajoncito {
  id            String                @id @default(cuid())
  codigo        String                @unique
  nombre        String
  descripcion   String?
  organizadorId String
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  organizador   Organizador           @relation(fields: [organizadorId], references: [id], onDelete: Cascade)
  componentes   ComponenteUbicacion[]

  @@map("cajoncitos")
}

model Equipo {
  id          String           @id @default(cuid())
  codigo      String           @unique
  sap         String?          @unique
  nombre      String
  descripcion String?
  marca       String?
  modelo      String?
  numeroSerie String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  repuestos   RepuestoEquipo[]

  @@map("equipos")
}

model Repuesto {
  id          String              @id @default(cuid())
  codigo      String              @unique
  nombre      String
  descripcion String?
  marca       String?
  modelo      String?
  numeroParte String?
  stockMinimo Int                 @default(0)
  stockActual Int                 @default(0)
  categoria   String?
  isActive    Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  equipos     RepuestoEquipo[]
  ubicaciones RepuestoUbicacion[]

  @@map("repuestos")
}

model Componente {
  id          String                @id @default(cuid())
  categoria   Categoria             @default(OTROS)
  descripcion String
  valorUnidad Json                  // Array of {valor: string, unidad: string}
  stockMinimo Int                   @default(0)
  isActive    Boolean               @default(true)
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  ubicaciones ComponenteUbicacion[]

  @@map("componentes")
}

model RepuestoEquipo {
  id         String   @id @default(cuid())
  repuestoId String
  equipoId   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  equipo     Equipo   @relation(fields: [equipoId], references: [id], onDelete: Cascade)
  repuesto   Repuesto @relation(fields: [repuestoId], references: [id], onDelete: Cascade)

  @@unique([repuestoId, equipoId])
  @@map("repuesto_equipo")
}

model RepuestoUbicacion {
  id           String      @id @default(cuid())
  repuestoId   String
  cantidad     Int         @default(1)
  armarioId    String?
  estanteriaId String?
  estanteId    String?
  cajonId      String?
  divisionId   String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  division     Division?   @relation(fields: [divisionId], references: [id], onDelete: Cascade)
  cajon        Cajon?      @relation(fields: [cajonId], references: [id], onDelete: Cascade)
  estante      Estante?    @relation(fields: [estanteId], references: [id], onDelete: Cascade)
  estanteria   Estanteria? @relation(fields: [estanteriaId], references: [id], onDelete: Cascade)
  armario      Armario?    @relation(fields: [armarioId], references: [id], onDelete: Cascade)
  repuesto     Repuesto    @relation(fields: [repuestoId], references: [id], onDelete: Cascade)

  @@map("repuesto_ubicacion")
}

model ComponenteUbicacion {
  id           String     @id @default(cuid())
  componenteId String
  cajoncitoId  String
  cantidad     Int        @default(1)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  cajoncito    Cajoncito  @relation(fields: [cajoncitoId], references: [id], onDelete: Cascade)
  componente   Componente @relation(fields: [componenteId], references: [id], onDelete: Cascade)

  @@unique([componenteId, cajoncitoId])
  @@map("componente_ubicacion")
}

enum Categoria {
  RESISTENCIA
  CAPACITOR
  INTEGRADO
  VENTILADOR
  OTROS
}

model Transaccion {
  id            String   @id @default(cuid())
  codigo        String   @unique
  tipo          String
  itemId        String
  itemType      String
  cantidad      Int
  stockAnterior Int
  stockNuevo    Int
  motivo        String?
  referencia    String?
  origenTipo    String?
  origenId      String?
  destinoTipo   String?
  destinoId     String?
  userId        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transacciones")
}
